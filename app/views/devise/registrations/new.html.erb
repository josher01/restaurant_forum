<div class="devise-container">
  <div class="row">
  <div class='col s12 m8 offset-m2 l8 offset-l2'>
      <h3 class='devise-title center'>用戶註冊</h3><br/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'share/devisemsg' %>
        
        <div class="input-field">
          <%= f.text_field :name, autofocus: true, class: 'validate' %><br />
          <%= f.label :name, class: 'active' %>
        </div>

        <div class="input-field">
          <%= f.email_field :email, autofocus: true , class: 'validate'%><br/>
          <%= f.label :email , class: 'active'%>
        </div>
      
        <div class="input-field">
          <%= f.password_field :password, placeholder: "#{@minimum_password_length} characters minimum",autocomplete: "off", class: 'validate' %>
          <%= f.label :password , class: 'active'%>
        </div>
      
        <div class="input-field">
          <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'validate' %><br />
          <%= f.label :password_confirmation , class: 'active'%>
        </div>
      
        <div class="actions">
          <div class="left"><%= f.submit "Sign up", class: 'btn waves-effect waves-light' %></div>
          <div class= "right"><%= render "devise/shared/links" %></div>
        </div>
      <% end %>
  </div>
  </div>
</div>
        

