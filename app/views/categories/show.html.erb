<div class="row">
  <div class="col s12">
    <ul class="tabs tabs-fixed-width ">
      <li class="tab col s2 "><%= link_to '全部餐廳' , restaurants_path , target: '_self' %></li>
      <% @categories.each do |c| %>
        <li class="tab col s2 ">
          <% if c==@category %>
           <%= link_to c.name, category_path(c), target: '_self' , class: 'active'%>
          <% else %>
            <%= link_to c.name, category_path(c), target: '_self' %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row" ">
  <% @rests.each do |r| %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <%= image_tag r.photo, alt: 'pic' %>
            </div>
            <div class="card-content">
              <span class="card-title"><%= r.res_name %></span>
              <p class='chip'><%= r.category.name %></p><br/><br/>
              <p class= 'truncate'><%= r.res_description %></p>
            </div>
            <div class="card-action center">
              <%= link_to ('<i class="small material-icons">expand_more</i>'.html_safe), restaurant_path(r) %>
            </div>
          </div>  
        </div>
  <% end %>
</div>




<div class='center'><%= paginate @rests %></div>