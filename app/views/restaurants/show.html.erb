<div class="container">
    <div class="row">
      <div class="col s12 m8 offset-m2 l8 offset-l2">
          <div class="card">
              <div class="card-image ">
                  <%= image_tag @rest.photo,  alt: 'pic'%>
              </div>
              <div class="card-content">
                  <span class="card-title"><%= @rest.res_name %></span>
                  <p ><%= @rest.res_description %></p>
                  <p ><%= @rest.res_tel %></p>
                  <%= link_to 'Back to Listing' , restaurants_path, class: 'btn waves-effect waves-light'%>
              </div>   
          </div>
      </div>
    </div>


    
      <div class="row">
          <%= @comment.content %>
      </div>


    <div class="row">
      <div class="col s12 m8 offset-m2 l8 offset-l2">
        <%= form_for [@rest, @comment] do |comment| %>
          <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <%= comment.text_area :content , class: 'validate', placeholder: '留個言吧' %>
            <%= comment.submit '新增評論' , class: 'btn btn-small waves-effect waves-light'%>
          </div>
        <% end %>
      </div>
    </div>
</div>

