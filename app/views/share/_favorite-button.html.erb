<% if object.is_favorited?(current_user) %>
  <span class="right">
    <%= link_to unfavorite_restaurant_path(object), method: :post do %>
      <i class="material-icons">favorite</i>
    <% end %>
  </span>
<% else %>
  <span class="right">
    <%= link_to favorite_restaurant_path(object), method: :post do %>
      <i class="material-icons">favorite_border</i>
    <% end %>
  </span>
<% end %>