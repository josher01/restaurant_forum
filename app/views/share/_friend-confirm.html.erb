<% unless user == current_user %>
  <% if current_user.friends?(user) %>
    <%= link_to 'Add Friend' , confirm_friendship_path(friend_id: user) , method: :post, class: "btn-friend white-text center" %>
  <% else %>
    <%= link_to 'Cancel Friend' , reject_friendship_path(friend_id: user) , method: :delete, class: "btn-friend white-text center" %>
  <% end %>
<% end %>