<% if object.is_liked?(current_user)%>
  <span class="right">
    <%= link_to unlike_restaurant_path(object), method: :post do %>
      <i class="material-icons">thumb_up</i><span class="small"><%= object.likers.count %></span>
    <% end %>
  </span>
<% else %>
  <span class="right">
    <%= link_to like_restaurant_path(object), method: :post do %>
      <i class="material-icons">thumb_up</i><span class="small"><%= object.likers.count %></span>
    <% end %>
  </span>
<% end %>


