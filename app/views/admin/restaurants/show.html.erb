<div class="container">
    <div class="row">
      <div class="col s12">
          <div class="card">
              <div class="card-image ">
                  <%= image_tag @rest.photo, alt: 'pic', class: 'responsive-img'%>
              </div>
              <div class="card-content">
                  <span class="card-title"><%= @rest.res_name %></span>
                  <p ><%= @rest.res_description %></p>
                  <p ><%= @rest.res_address %></p>
                  <p ><%= @rest.res_tel %></p><br/>
                  <%= link_to 'Back to dashboard' , admin_restaurants_path, class: 'btn waves-effect waves-light'%>
              </div>
          </div>
      </div>
    </div>
</div>

